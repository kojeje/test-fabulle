{% extends 'base.twig' %}
{% block content %}
    <article class="container-fluid">
        <section class="row">
            <div class="offset-md-2 d-none d-md-block"></div>

            <h1 class="article-h1 col-12 col-md-6">{{ post.title }}</h1>

            <div class="offset-md-2 d-none d-md-block"></div>
            <div class="row">
                {% for actu in actus %}
                    <div class="offset-md-1 d-none d-md-block"></div>
                    <div class="col-12 col-md-4 video-content event-list2 flex-title-bloc">
                        <div class="event2">
                            <a class="row" href="{{ actu.link }}">

                                <h2 class="active#ff6633 titre-page2 col-12 article-h1 under-title h1-event-list">
                                    <i class="fas fa-feather-alt "></i> le petit mot ... <span class="word-date">{{ actu.date|date('F Y') }}</span>
                                </h2>

                                <div class="word-content col-md-12 home-post cie-text">
                                    <div class="offset-4 d-block d-md-none"></div>
                                    <img src="{{ actu.thumbnail.src }}" class="affiche float-thumb actu-img col-4 col-md-12"  alt="affiche2">
                                    <div class="offset-4 d-block d-md-none"></div>
                                    {{ actu.content|truncate (50)|raw }}
                                </div>

                            </a>
                        </div>

                    </div>

                {% endfor %}
                <div class="offset-5"></div>
                <div class="col-2"><img src="{{ post.thumbnail.src }}" alt="Ca c'est Fabulle qui vous écrit {{ post.title }}"></div>
                <div class="offset-5"></div>
                <div class="offset-md-2 d-none d-md-block"></div>
                <section class="col-12 col-md-4 row">
                    <div class="offset-3"></div>
                    <div class="offset-3"></div>
                    {{ '[mailpoet_form id="3"]'|shortcodes }}
                </section>
                <div class="offset-md-1 d-none d-md-block"></div>
                <section class="col-12 col-md-4">
                    {% for contact in contacts if contact.id == 916 %}


                        <section class="form col-md-12">
                            <p>
                                <i>
                                    Écrivez à <span class="article-sub-h1">Fabulle</span>  !...
                                    <br>


                                    Envie de partager ? Un dessin? Un petit mot gentil ?

                                    <br>
                                    C'est ici!
                                </i>
                            </p>
                            {{ contact.get_field('code_court_cie')|shortcodes }}
                        </section>

                    {% endfor %}
                </section>
            </div>

        </section>

    </article>


{% endblock %}
