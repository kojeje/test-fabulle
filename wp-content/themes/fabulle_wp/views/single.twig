{% extends "base.twig" %}

{% block content %}
    <div class="content-wrapper">
        <article class="row post-type-{{post.post_type}} show_teaser" id="post-{{post.ID}}">


            <div class="col-md-8 article-content">
                <h1 class="article-h1 under-title show-h1">{{ post.title }}</h1>

                <p class="article-text article-sub-h2">
                    {{ post.content }}
                </p>
            </div>
        </article>
    </div><!-- /content-wrapper -->
{% endblock %}