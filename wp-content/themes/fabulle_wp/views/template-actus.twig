{% extends "base.twig" %}


{% block content %}
    <a id="article-anch" class="anch"></a>
    <div class="container-fluid content-wrapper article_content show-content">

        <article class="row post-type-{{post.post_type}} show_teaser" id="post-{{post.ID}}">
            <h1 class=" link-h1 col-12">Le petit mot de fabulle</h1>
            <div class="offset-md-1 d-none d-md-block"></div>
            <div class="col-md-10 col-12 article-content ">
                <div class="word-date">
                    {{ post.date|date('F Y') }}
                </div>
                <div class="col-md-12 col-12 ">

                    <img src="{{post.thumbnail.src}}" alt="affiche" class="affiche2 float-thumb">
                    {{ post.content }}
                </div>


                <a href="#article-anch2" class="col-12">
                    <div class="button button2">
                        <p>
                            <i class="fas fa-chevron-down"></i>
                        </p>
                    </div>
                </a>
            </div>
            <div class="offset-md-1 d-none d-md-block"></div>





            <div class="v-bloc row"></div>
            <a id="article-anch2" class="show-content2"></a>
            {% if post.get_field('video-booleen') %}
                <div class="offset-md-1 d-none d-md-block"></div>
                <div class="col-md-6 col-12">
                    <h1>
                        {{ post.get_field('field_5d55f554f07a2') }}
                    </h1>
                    {{ post.get_field('field_5d55f554f07b3')  }}

                </div>
                <div class="col-md-4 video">
                    <div class="video-content">
                        {{ post.get_field('field_5cb1e69bc71a5') }}
                    </div>
                    <a href="#article-anch3">
                        <div class="button button2">

                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                </div>
                <div class="offset-md-2 d-none d-md-block"></div>



            {% else %}

                <div class="row">


                    <div class="offset-md-1 d-none d-md-block"></div>
                    <div class="col-md-10 col-12 img_alt" id="img-alt">
                        <h2 class="article-h1 under-title">
                            {{ post.get_field('field_5d55f554f07a2') }}
                        </h2>
                        <img src="{{ post.get_field('field_5d55f554f0949') }}" class=" float-thumb2 " alt="img">
                        {{ post.get_field('field_5d55f554f07b3')  }}
                    </div>
                    <div class="offset-md-1 d-none d-md-block"></div>
                    <a href=" #article-anch3" class="d-block t-a-center container-fluid">
                        <div class="button button2">

                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                    <div class="offset-md-2 d-none d-md-block"></div>
                </div>

            {% endif %}


            <!-- SLIDER -->
            {# Si Slider existe#}
            {% if post.get_field('slider-bollean') == true %}
                <!-- IMAGES 1265 X 550 -->
            <a id="article-anch3"></a>

                <div id="carouselExampleIndicators" class="carousel slide d-none d-md-block row" data-ride="carousel">
                    <div id="carouselExampleIndicators" class="carousel slide d-none d-md-block" data-ride="carousel">

                    <div class="carousel-inner col-12">
                        {# Si img1 existe #}
                        {% if post.get_field('image_1') %}
                            {# img 1#}
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="{{ post.get_field('image_1') }}" alt="First slide">
                            </div>
                        {% endif %}


                        {# Si img2 existe #}
                        {% if post.get_field('image_2') %}
                            {# img 2#}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ post.get_field('image_2') }}" alt="Second slide">
                            </div>

                        {% endif %}
                        {# Si img3 existe #}
                        {% if post.get_field('image_3') %}
                            {# img 3#}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ post.get_field('image_3') }}" alt="Third slide">
                            </div>
                        {% endif %}
                        {# Si img4 existe #}
                        {% if post.get_field('image_4') %}
                            {# img 4#}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ post.get_field('image_4') }}" alt="Fourth slide">
                            </div>
                        {% endif %}
                        {# Si img5 existe #}
                        {% if post.get_field('image_5') %}
                            {# img 5#}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ post.get_field('image_5') }}" alt="Fifth slide">
                            </div>
                        {% endif %}
                        {# Si img5 existe #}
                        {% if post.get_field('image_6') %}
                            {# img 6#}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ post.get_field('image_6') }}" alt="sixth slide">
                            </div>
                        {% endif %}
                        {# Si img6 existe #}
                        {% if post.get_field('image_7') %}
                            {# img 7#}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ post.get_field('image_7') }}" alt="seventh slide">
                            </div>
                        {% endif %}
                        {# Si img7 existe #}
                        {% if post.get_field('image_8') %}
                            {# img 8#}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ post.get_field('image_8') }}" alt="eighth slide">
                            </div>
                        {% endif %}
                        {# Si img8 existe #}
                        {% if post.get_field('image_9') %}
                            {# img 9#}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ post.get_field('image_9') }}" alt="ninth slide">
                            </div>
                        {% endif %}
                        {# Si img9 existe #}
                        {% if post.get_field('image_10') %}
                            {# img 10#}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ post.get_field('image_10') }}" alt="tenth slide">
                            </div>
                        {% endif %}

                    </div>

                    <!-- BOUTONS -->
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                </div>
                    <a href="#article-anch4" class="anch">
                        <div class="button button-h">
                            <p>
                                <i class="fas fa-chevron-down"></i>
                            </p>
                        </div>
                    </a>

            {% endif %}
            {%  for new in news %}
                <a id="article-anch4" class="anch col-md-12"></a>
                <section class="container contact-section">
                    <div class="contact-section2">
                        <a id="article-anch" class="anch"></a>
                        <div class="id row">
                            <div class="offset-2 d-none d-lg-block"></div>
                            <div class="col-12 col-lg-4 coordonnees">
                                <img src="{{ new.thumbnail.src }}" class="logo2" alt="contact">
                                <p>54 rue de MÃ©gret</p>
                                <p>
                                    <span>33400</span> <strong>Talence</strong>
                                </p>

                                <p class="d-flex justify-content-start">
                                    <i class="fal fa-phone tel_flex"></i>
                                    <span class="tel_flex tel_flex2">06 28 23 01 11</span>
                                </p>
                                <div class="active#c90089 contact-title">
                                    <h1>{{ new.title }}</h1>
                                </div>
                            </div>

                            <div class="form col-12 col-lg-4">
                                {{ new.content }}
                            </div>
                            <div class="offset-2 d-none d-md-block"></div>
                        </div>
                    </div>
                </section>
            {% endfor %}
            <h2 class="article-h1 under-title">A L'AFFICHE</h2>

            {% include '/views/partial/loops/show-loop.twig' %}





            <div class="offset-1"></div>

            </div>
        </article>
    </div>


{% endblock %}


